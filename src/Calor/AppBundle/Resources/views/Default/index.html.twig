<body style="background-color: #FDFDFA;">
    <div class="container" ng-controller="HeaderController as header">
        <div class="row header">
            <div class="col-sm-5">
                <a href="#" class="h3">CalorMeter</a>
                <span>The simple calories tracker</span>
            </div>
            <div class="col-sm-7 pull-right text-right">
                <a href="#" class="btn btn-link">Home</a>
                <a href="api/doc/" target="_blank" class="btn btn-link">Docs</a>
                <span ng-hide="logined">
                    <a href="#/login" class="btn btn-link">Log in</a>
                    <a href="#/signup" class="btn btn-danger">Sign up</a>
                </span>
                <span ng-show="logined">
                    <a href="#/dashboard" class="btn btn-link">Dashboard</a>
                    <a href="#/reports" class="btn btn-link">Reports</a>
                    <a href="#" ng-click="logout();" class="btn btn-danger">Log out</a>
               </span>
            </div>
        </div>
        <div ng-view></div>
    </div>

</body>